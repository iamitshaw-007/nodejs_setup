{
    "name": "nodejs-setup",
    "version": "1.0.0",
    "description": "production-setup-for-node-project",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "build": "npx tsc",
        "dev": "nodemon src/server.ts",
        "start": "node dist/server.js",
        "prepare": "husky",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "keywords": [
        "nodeJS",
        "expressJS"
    ],
    "author": "Amit Shaw",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@eslint/js": "^9.11.1",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^22.7.4",
        "eslint": "^9.11.1",
        "globals": "^15.10.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.8.0"
    },
    "nodemonConfig": {
        "configFile": "./nodemon.json"
    },
    "lint-staged": {
        "*.{ts,js,cjs,mjs}": [
            "npm run lint:fix"
        ]
    }
}
